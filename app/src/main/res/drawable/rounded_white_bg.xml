<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when the view is pressed -->
    <item android:state_pressed="true">
        <!-- Use a <shape> directly here or a color defined in colors.xml -->
        <shape android:shape="rectangle">
            <!-- Example: A slightly darker/grayish color when pressed -->
            <solid android:color="#40666666" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default state (when not pressed) - references your base shape -->
    <item android:drawable="@drawable/rounded_white_base" />

</selector>
